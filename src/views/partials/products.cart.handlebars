<div class="row mb-4 d-flex justify-content-between align-items-center">
	<div class="col-md-2 col-lg-2 col-xl-2">
		<div class="position-relative product">
			{{#if this._id.thumbnail }}
				<img class="img-fluid rounded-3" src="/img/products/400x600_{{ this._id.thumbnail }}" alt="{{ this._id.title }}">
			{{else}}
				<img src="https://dummyimage.com/400x600/ccc/000&text=" class="img-fluid rounded-3">
			{{/if}}
			<span class="badge badge-primary stock">Stock {{ this._id.stock }}</span>
		</div>
	</div>
	<div class="col-10">
		<div class="row">
			<div class="col-md-5 col-lg-5">
				<h6 class="text-muted">Producto</h6>
				<h6 class="text-black mb-0">{{this._id.title}}</h6>
			</div>
			<div class="col-md-3 col-lg-3">
				<h6 class="text-muted">Cantidad</h6>
				<h6 class="text-black mb-0">{{this.quantity}}</h6>
			</div>
			<div class="col-md-3 col-lg-3">
				<h6 class="text-muted">Precio</h6>
				<h6 class="text-black mb-0">{{this._id.price}} $</h6>
			</div>					
			<div class="col-md-1 col-lg-1 col-xl-1 text-end">
				<a href="#" data-id="{{this._id._id}}" class="text-muted removeProd">
					<i class="fa-regular fa-trash-can"></i>
				</a>
			</div>
			<!--
			<div class="col-12">
				<div class="alert alert-danger mt-4" role="alert">
					Actualmente no tenemos stock suficiente ðŸ˜¢
				</div>
			</div>
			-->
		</div>
	</div>

	
</div>
<hr class="my-4">
